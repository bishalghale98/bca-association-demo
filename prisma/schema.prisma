generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  // üîë Core Identity
  id             String   @id @default(uuid()) @db.Uuid
  name           String
  email          String   @unique
  phone          String?
  avatarUrl      String?
  avatarPublicId String?
  role           UserRole @default(MEMBER)
  password       String

  // üéì Academic Information
  studentId      String  @unique
  course         String?
  specialization String?
  semester       String
  year           Int?

  // üë§ Personal Profile
  dateOfBirth      DateTime?
  gender           Gender?
  address          String?
  bio              String?
  bloodGroup       String?
  emergencyContact String?

  // üè∑ Membership & System Info
  joinDate         DateTime?        @default(now())
  membershipStatus MembershipStatus @default(PENDING)

  // üèÜ Gamification / Engagement
  points          Int @default(0)
  level           Int @default(1)
  nextLevelPoints Int @default(100)

  // conditions
  associationRules   Boolean
  physicallyVerified Boolean
  termsAccepted      Boolean

  // ‚è± System Timestamps
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  events             Event[]
  eventRegistrations EventRegistration[]
}

enum UserRole {
  ADMIN
  MEMBER
  SUPER_ADMIN
}

enum MembershipStatus {
  PENDING
  ACTIVE
  EXPIRED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

// Event model
model Event {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  description String?
  location    String?

  type String?

  eventDate DateTime?

  startDate DateTime? // optional, multi-day
  endDate   DateTime? // optional, multi-day

  // creator / organizer
  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  eventRegistrations EventRegistration[]
}

// Event registration
model EventRegistration {
  id String @id @default(uuid()) @db.Uuid

  eventId String @db.Uuid
  userId  String @db.Uuid

  // form fields
  fullName String
  phone    String?
  email    String   
  message  String?
  attended Boolean @default(false)

  // relation
  event Event @relation(fields: [eventId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, userId]) 
}
