generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  // ğŸ”‘ Core Identity
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  avatarUrl String?
  role      UserRole @default(MEMBER)
  password  String

  // ğŸ“ Academic Information
  studentId      String  @unique
  course         String?
  specialization String?
  semester       Int
  year           Int?

  // ğŸ‘¤ Personal Profile
  dateOfBirth      DateTime?
  gender           Gender?
  address          String?
  bio              String?
  bloodGroup       String?
  emergencyContact String?

  // ğŸ· Membership & System Info
  joinDate         DateTime?        @default(now())
  membershipStatus MembershipStatus @default(PENDING)

  // ğŸ† Gamification / Engagement
  points          Int @default(0)
  level           Int @default(1)
  nextLevelPoints Int @default(100)

  // â± System Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  MEMBER
  SUPER_ADMIN
}

enum MembershipStatus {
  PENDING
  ACTIVE
  EXPIRED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

